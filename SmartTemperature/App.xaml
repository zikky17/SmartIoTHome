<Application x:Class="SmartTemperature.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SmartTemperature">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Routing\Routing.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SharedResourcesWPF;component/Resources/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/SharedResourcesWPF;component/Resources/Buttons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
